@model List<MessageWriter>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageId</th>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterFullName</td>
            <td> @(((DateTime)item.MessageDate).ToString("dd.MMMM-yyyy"))</td>
          <td><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-gradient-info">Mesajı Aç</a></td>
        </tr>
    }
</table>
<a href="/Message/SendMessage/" class="btn btn-primary">Yeni Mesaj Oluştur</a>

<a href="/Message/SendBox/" class="btn btn-primary">Giden Kutusuna Git</a>


