@model UserSignUpViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Register</title>

    <link href="~/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen   animated fadeInDown">
        <div>
            <div>
                <h4 class="logo-name">Blog</h4>
            </div>
            <h3>Kayıt Ekranı</h3>
            <p>Yeni Hesap Oluştur</p>
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="FullName" class="text text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.FullName" placeholder="Adınız Soyadınız" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="UserName" class="text text-danger"></span>
                    <input type="text" class="form-control" asp-for="UserName" placeholder="Kullanıcı Adı" >
                </div>
                <div class="form-group">
                    <span asp-validation-for="Email" class="text text-danger"></span>
                    <input type="email" class="form-control" asp-for="@Model.Email" placeholder="Email" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Password" class="text text-danger"></span>
                    <input type="password" class="form-control" asp-for="Password" placeholder="Şifre" required="">
                </div>
                <div class="form-group">
                    <span asp-validation-for="ConfirmPassword" class="text text-danger"></span>
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Şifre Tekrarı" required="">
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
               
                <div class="form-group">
                    <div class="checkbox i-checks"><label> <input type="checkbox"><i></i> Kullanım Şartlarını okudum,kabul ediyorum. </label></div>
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt Ol</button>

                <p class="text-muted text-center"><small>Bir hesabınız var mı?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="/Login/Index">Giriş Yap</a>
            </form>
            <p class="m-t"> <small>Asp.Net Core 5.0 Tüm hakları saklıdır| @DateTime.Now.Year</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia-gh-pages/js/popper.min.js"></script>
    <script src="~/inspinia-gh-pages/js/bootstrap.js"></script>
    <!-- iCheck -->
    <script src="~/inspinia-gh-pages/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>
