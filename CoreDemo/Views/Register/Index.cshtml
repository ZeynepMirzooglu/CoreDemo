@model EntityLayer.Concrete.Writer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">Adınız Soyadınız</label>
                            @Html.TextBoxFor(x=>x.WriterFullName,new{@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterFullName,"",new{ @class = "text-danger" })
                            @* <input type="text" class="form-control" id="validationDefault01" name="WriterFullName" placeholder="" required="">*@
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02" >Email Adresi</label>
                            @Html.TextBoxFor(x=>x.WriterEmail,new{@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterEmail,"",new{ @class = "text-danger" })
                            @*<input type="email" class="form-control" id="validationDefault02" name="WriterEmail" placeholder="" required="">*@
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Şifre</label>
                            @Html.TextBoxFor(x=>x.WriterPassword,new{@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterPassword,"",new{ @class = "text-danger" })
                            @*<input type="password" class="form-control" id="password1" name="WriterPassword" placeholder="" required="">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Şifreyi Onayla</label>
                            @Html.TextBoxFor(x=>x.WriterPassword,new{@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterPassword,"",new{ @class = "text-danger" })
                            @*<input type="password" class="form-control" id="password2" placeholder="" name="WriterPassword" required="">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Dosya Ekle</label>
                            @Html.TextBoxFor(x=>x.WriterImage,new{@class="form-control"})
                            @Html.ValidationMessageFor(x=>x.WriterImage,"",new{ @class = "text-danger" })
                            @* <input type="image" class="form-control" id="password2" placeholder="" name="WriterImage" required="">*@
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Kayıt</button>
                    <p>
                        <a href="#" id="btn1">Tüm şartları okudum, kabul ediyorum.</a>
                    </p>

                }

            </div>
        </div>
    </div>
    <br />
    <script>
        $('#btn1').click(function () {
            swal("Site Kabul Şartları","Sizlere hizmet sunabilmek amaçlı analizler yapabilmek için, sadece gerekli olan kişisel verilerinizin, işbu gizlilik ve kişisel verilerin işlenmesi politikası uyarınca işlenmesini, kabul edip etmemek hususunda tamamen özgürsünüz. Siteyi kullanmaya devam ettiğiniz takdirde kabul etmiş olduğunuz tarafımızca varsayılacak olup, daha ayrıntılı bilgi için bizimle email@site.com e-mail adresi üzerinden iletişime geçmekten lütfen çekinmeyiniz. İptal etmek için iletisim@email.com adresinden iptal işlemini gerçekleştirebilirsiniz.");
        });
    </script>

</section>
